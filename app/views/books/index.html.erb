<table>
<tr><td>Title</td><td>Author</td><td>Rating</td><td>Votes</td><td>Your Vote</td><td>
<%= link_to 'Add Book', new_book_path %>

</td></tr>
<% @books.each do |book| %>
	<tr>
	<td><%= book.title %></td>
	<td><%= book.author %></td>
	<td><%= book.rating %></td>
	<td><%= book.votes %></td>
	<td><%= form_with scope: :book, url: book_path(book), method: "patch", local: true do |form| %>

		<p>
    <%= form.label :rating %><br>
    <%= form.number_field :rating, :step => 0.1 %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
		<% end %>


	</td>
	<td><%= form_with scope: :book, url: book_path(book), method: "delete", local: true do |form| %>
	<%= link_to 'Destroy', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

	<% end %> 
	</tr>
	<% end %><br>
	</table>